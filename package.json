{
  "name": "ccalendar",
  "version": "1.0.0",
  "private": true,
  "description": "Country Calendar - Track your travels across the globe",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "npm run dev --workspaces --if-present",
    "dev:api": "npm run dev -w packages/api",
    "dev:web": "npm run dev -w packages/web",
    "build": "npm run build --workspaces --if-present",
    "build:api": "npm run build -w packages/api",
    "build:web": "npm run build -w packages/web",
    "build:production": "npm run build:web && npm run build:api && npm run copy:assets",
    "copy:assets": "mkdir -p packages/api/dist/public && cp -r packages/web/dist/* packages/api/dist/public/",
    "heroku-postbuild": "npm run db:generate && npm run build:production",
    "start": "npm run start --workspace=@ccalendar/api",
    "test": "npm run test --workspaces --if-present",
    "test:e2e": "npm run test -w packages/e2e",
    "test:e2e:ui": "npm run test:ui -w packages/e2e",
    "test:e2e:headed": "npm run test:headed -w packages/e2e",
    "lint": "npm run lint --workspaces --if-present",
    "lint:fix": "npm run lint:fix --workspaces --if-present",
    "db:migrate": "npm run db:migrate -w packages/api",
    "db:migrate:deploy": "npm run db:migrate:deploy -w packages/api",
    "db:generate": "npm run db:generate -w packages/api",
    "db:studio": "npm run db:studio -w packages/api",
    "db:seed": "npm run db:seed -w packages/api"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "type": "module",
  "devDependencies": {
    "@eslint/js": "^8.56.0",
    "@types/node": "^20.11.0",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "prettier": "^3.2.4",
    "typescript": "^5.3.3"
  }
}
