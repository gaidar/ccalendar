{
  "name": "ccalendar",
  "version": "1.0.0",
  "private": true,
  "description": "Country Calendar - Track your travels across the globe",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "pnpm -r --parallel run dev",
    "dev:local": "./scripts/dev.sh",
    "dev:api": "pnpm --filter @ccalendar/api dev",
    "dev:web": "pnpm --filter @ccalendar/web dev",
    "build": "pnpm -r run build",
    "build:api": "pnpm --filter @ccalendar/api build",
    "build:web": "pnpm --filter @ccalendar/web build",
    "build:production": "pnpm build:web && pnpm build:api && pnpm copy:assets",
    "copy:assets": "mkdir -p packages/api/dist/public && cp -r packages/web/dist/* packages/api/dist/public/",
    "heroku-postbuild": "pnpm db:generate && pnpm build:production",
    "start": "pnpm --filter @ccalendar/api start",
    "test": "pnpm -r run test",
    "test:e2e": "pnpm --filter @ccalendar/e2e test",
    "test:e2e:ui": "pnpm --filter @ccalendar/e2e test:ui",
    "test:e2e:headed": "pnpm --filter @ccalendar/e2e test:headed",
    "lint": "pnpm -r run lint",
    "lint:fix": "pnpm -r run lint:fix",
    "db:migrate": "pnpm --filter @ccalendar/api db:migrate",
    "db:migrate:deploy": "pnpm --filter @ccalendar/api db:migrate:deploy",
    "db:generate": "pnpm --filter @ccalendar/api db:generate",
    "db:studio": "pnpm --filter @ccalendar/api db:studio",
    "db:seed": "pnpm --filter @ccalendar/api db:seed"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "type": "module",
  "devDependencies": {
    "@eslint/js": "^8.56.0",
    "@types/node": "^20.11.0",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "prettier": "^3.2.4",
    "typescript": "^5.3.3"
  }
}
